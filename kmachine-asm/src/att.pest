WHITESPACE = _{ " " | "\t" }

char  = @{ ASCII_ALPHANUMERIC | "_" }

ident = @{ ASCII_ALPHA ~ (char*) }
register = { "%" ~ ident }
literal = { "$" ~ ASCII_ALPHANUMERIC+ }
label = { ident }

labeldecl = { label ~ ":" }

op = @{ ASCII_ALPHA+ }
arg = { register | label | literal }
instruction = { op ~ arg ~ ("," ~ arg)* }

program = _{ (NEWLINE? ~ (labeldecl | instruction) ~ NEWLINE+)* }
